<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="8sp"
    android:paddingRight="8sp">

    <android.support.v7.preference.PreferenceCategory
        android:title="Settings">

        <android.support.v7.preference.Preference
            android:key="prefFolderPath"
            android:title="Custom folder for extract apk file" />

        <android.support.v7.preference.Preference
            android:key="prefApkNameType"
            android:title="Default filename for extracted APK"
            />

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="About">

        <android.support.v7.preference.Preference
            android:key="prefLicense"
            android:title="License"
            />

        <android.support.v7.preference.Preference
            android:key="prefAppVersion"
            android:title=""
            />

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>